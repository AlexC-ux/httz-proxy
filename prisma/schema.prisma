generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model request {
  id         String    @id @unique @default(cuid())
  created_at DateTime? @default(now()) @updatedAt
  url        String
  headers    String?
  payload    String?
  method     String
  response   response? @relation(fields: [responseId], references: [id])
  responseId String?
}

model response {
  id         String    @id @unique @default(cuid())
  created_at DateTime? @default(now()) @updatedAt
  headers    String?
  payload    String?
  request    request[]
}
